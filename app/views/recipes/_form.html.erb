<div class="form-group">
  <div class="control-label col-md-2">
      <%= f.label :name %>
  </div>
  <div class="col-md-8">
      <%= f.text_field :name, class: "form-control", placeholder: "Name of recipe", autofocus: true %>
  </div>
</div>

<div class="form-group">
  <div class="control-label col-md-2">
      <%= f.label :description %>
  </div>
  <div class="col-md-8">
      <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Recipe description" %>
  </div>
</div>

<div class="form-group">
  <div class="col-md-offset-2 col-md-8">
      <%= f.submit "Pohrani recept", class: "btn btn-primary btn-lg btn-xlarge" %>
  </div>
</div>
